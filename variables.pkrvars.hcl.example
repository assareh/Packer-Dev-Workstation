# Example variables file for customizing the VM build
# Copy this file to variables.pkrvars.hcl and modify as needed

vm_name      = "ubuntu-dev-vm"
ssh_username = "developer"
ssh_password = "developer"  # Change this for production use

# VM Resources
cpus      = 6
memory    = 32768   # 32GB
disk_size = 512000  # 500GB

# Ubuntu 24.04.3 LTS ISO
iso_url      = "https://releases.ubuntu.com/24.04/ubuntu-24.04.3-live-server-amd64.iso"
iso_checksum = "sha256:c3514bf0056180d09376462a7a1b4f213c1d6e8ea67fae5c25099c6fd3d8274b"

# Builder Selection
# Options: "vmware" (Mac mini with VMware Fusion) or "qemu" (Nomad host / Linux)
builder = "vmware"

# QEMU-specific settings (only used when builder = "qemu")
qemu_accelerator   = "kvm"    # Options: kvm (Linux), hvf (macOS), tcg (software, slow)
qemu_output_format = "qcow2"  # Options: qcow2, raw
